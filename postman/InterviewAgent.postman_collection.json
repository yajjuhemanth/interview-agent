{
  "info": {
    "name": "Interview Agent API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Agent (Generate Q&A + Save)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:5000/agent", "host": ["http://localhost:5000"], "path": ["agent"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"job_title\": \"Backend Engineer\",\n  \"job_description\": \"APIs, Python, Flask, MySQL\"\n}"
        }
      }
    },
    {
      "name": "Generate",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:5000/generate", "host": ["http://localhost:5000"], "path": ["generate"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"job_title\": \"Backend Engineer\",\n  \"job_description\": \"APIs, Python, Flask, MySQL\"\n}"
        }
      }
    },
    {
      "name": "Save",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:5000/save", "host": ["http://localhost:5000"], "path": ["save"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"job_title\": \"Backend Engineer\",\n  \"job_description\": \"APIs, Python, Flask, MySQL\",\n  \"questions\": [\"Q1\", \"Q2\", \"Q3\"]\n}"
        }
      }
    },
    {
      "name": "Get All",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:5000/get", "host": ["http://localhost:5000"], "path": ["get"] }
      }
    },
    {
      "name": "Get by Title",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/get?job_title=Backend%20Engineer&limit=10",
          "host": ["http://localhost:5000"],
          "path": ["get"],
          "query": [
            { "key": "job_title", "value": "Backend Engineer" },
            { "key": "limit", "value": "10" }
          ]
        }
      }
    }
  ]
}
